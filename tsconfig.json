{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "passlang": [
        "packages/passlang/src"
      ],
      "pass-loader": [
        "packages/pass-loader/src"
      ],
      "@passlang/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
  ]
}
